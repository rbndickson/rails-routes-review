<table class="table table-bordered">

  <thead>
    <tr>
      <th><%= title_row[:title_0] %></th>
      <th><%= title_row[:title_1] %></th>
      <th><%= title_row[:title_2] %></th>
      <th class="span5"><%= title_row[:title_3] %></th>
    </tr>
  </thead>

  <tbody>
    <% session[:display_data].each do |route, col_title |  %>
      <tr>
        <% col_title.each do |col_title, cell_text| %>
          <% if cell_text == "" %>

          <td id=<%= "#{route}#{col_title}_cell" %>>
            <form class="form-inline" id="check_answer" action="/check_answer" method="post">
              <input class="input-small" id=<%= "#{route}/#{col_title}" %> type="text" name="user_answer" autofocus></input>
            </form>
            <button type="submit" id="show_answer_button" class="btn btn-small btn-warning" tabIndex="-1" value=<%= "#{route}/#{col_title}" %>>reveal</button>
          </td>

          <% else %>
            <td id=<%= "#{route}#{col_title}" %>><%= cell_text %></td>
          <% end %>

        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
<hr>
